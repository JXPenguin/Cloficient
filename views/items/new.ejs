<%- include("../partials/header") %>

<div class="container">
	<div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h1 style="text-align: center;">Add a New Item to <%= category.name %></h1>
            <form action="/categories/<%= category._id %>/items" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="item[name]" placeholder="name">
                </div>
                <div class="form-group">
					<input class="form-control" type="text" name="item[brand]" placeholder="brand">
                </div>
                <div class="form-group">
					<input class="form-control" type="text" name="item[color]" placeholder="color">
                </div>
                <div class="form-group">
					<input class="form-control" type="text" name="item[price]" placeholder='price "12.50" '>
                </div>
                <div class="form-group">
					<input class="form-control" type="text" name="item[wears]" placeholder="current number of wears (estimate if unsure)">
                </div>
                <div class="form-group">
					<input class="form-control" type="text" name="item[date]" placeholder="date purchased">
				<div class="form-check">
					<input class="form-check-input" type="radio" name="item[favorite]" id="favoriteTrue" value="true">
					<label class="form-check-label" for="favoriteTrue">
						Favorite
					</label>
					</div>
				<div class="form-check">
					<input class="form-check-input" type="radio" name="item[favorite]" id="favoriteFalse" value="false" checked>
					<label class="form-check-label" for="favoriteFalse">
						Unfavorite
					</label>
				</div>
				</div>
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/categories">Go back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>