<%- include("../partials/header") %>

<div class="container">
	<div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h1 style="text-align: center;">Edit item <%= item.name %></h1>
            <form action="/categories/<%= category_id %>/items/<%= item._id %>?_method=PUT" method="POST">
				<div class="form-group">
                    <input class="form-control" type="text" name="item[name]" placeholder="name" value="<%= item.name%>">
                </div>
                <div class="form-group">
					<input class="form-control" type="text" name="item[brand]" placeholder="brand" value="<%= item.brand%>">
                </div>
                <div class="form-group">
					<input class="form-control" type="text" name="item[color]" placeholder="color" value="<%= item.color%>">
                </div>
                <div class="form-group">
					<input class="form-control" type="text" name="item[price]" placeholder='price "12.50" ' value="<%= item.price%>">
                </div>
                <div class="form-group">
					<input class="form-control" type="text" name="item[wears]" placeholder="current number of wears (estimate if unsure)" value="<%= item.wears%>">
                </div>
                <div class="form-group">
					<input class="form-control" type="text" name="item[date]" placeholder="date purchased" value="<%= item.date%>">
				<div class="form-check">
                    <input class="form-check-input" type="radio" name="item[favorite]" id="favoriteTrue" value="true" 
                    <% if(item.favorite){ %>
                        checked
                    <% } %>
                    >
					<label class="form-check-label" for="favoriteTrue">
						Favorite
					</label>
					</div>
				<div class="form-check">
                    <input class="form-check-input" type="radio" name="item[favorite]" id="favoriteFalse" value="false"
                    <% if(!item.favorite){ %>
                        checked
                    <% } %>
                    >
					<label class="form-check-label" for="favoriteFalse">
						Unfavorite
					</label>
				</div>
				</div>
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/categories">Go back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>