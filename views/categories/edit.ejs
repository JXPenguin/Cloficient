<%- include("../partials/header") %>

<div class="container">
	<div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h1 style="text-align: center;">Edit Category <%= category.name %></h1>
			<form action="/categories/<%= category._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="category[name]" placeholder="name" value ="<%= category.name %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/categories">Go back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>